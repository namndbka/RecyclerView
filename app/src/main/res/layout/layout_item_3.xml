<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_letter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_background"
        android:text="T"
        android:textSize="40sp"
        android:textColor="#FFF"
        android:gravity="center"/>
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_letter"
        android:text="Hello World"
        android:textSize="26sp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_letter"
        android:layout_below="@id/text_name"
        android:layout_toLeftOf="@id/image_favorite"
        android:singleLine="true"
        android:text="Hello World aaaaaaaaaaaaaaaaaaaaaaa"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_letter"
        android:layout_below="@id/text_subject"
        android:text="Hello World bbbbbbbbbbbbbb"
        android:layout_toLeftOf="@id/image_favorite"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/text_time"
        android:text="12:00 PM"
        android:layout_below="@id/image_favorite"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:src="@drawable/ic_star_normal"
        />

</RelativeLayout>